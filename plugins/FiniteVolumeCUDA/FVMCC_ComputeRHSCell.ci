void FVMCC_ComputeRHSCell<SCHEME,PHYSICS,POLYREC,LIMITER,NB_BLOCK_THREADS>::configure ( Config::ConfigArgs& args )
{
  FVMCC_ComputeRHS::configure(args);
}

