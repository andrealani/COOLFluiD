       // set coordinates of cell centroid
       Node& coordinate = currState.getCoordinates();
       // z = coordinate[XX];
       r = coordinate[YY];
       cellsRadius[iCell] = r;

     /*UNCOMMENT THIS TO COMPUTE elConductivity EVERY ITERATION
       
       // computePhysicalData() calls setComposition() for LTE cases
        updateVarSet->computePhysicalData(*currState, m_physicalData);
        CFreal Tdim = m_physicalData[EulerTerm::T]*refData[EulerTerm::T]; 
