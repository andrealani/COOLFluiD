  CFreal r = 0.;
  //CFreal z = 0.;
  
  // use stored data for coils position and current.
  VectorPotential::getInstance().useStandardData();
  
  // el Conductivity
  /*UNCOMMENT THIS TO COMPUTE elConductivity EVERY ITERATION
    CFreal Tdim = 0.;
